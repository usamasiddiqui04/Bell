<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TermcondirionActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        app:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="#ffffff"
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/ic_baseline_keyboard_backspace_24"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="More">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        android:layout_margin="18sp"
        android:id="@+id/termscondiditon"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:text="@string/terms_conditions"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view1"
        app:layout_constraintTop_toBottomOf="@id/termscondiditon"
        android:layout_marginTop="20sp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_margin="18sp"
        android:id="@+id/datapolicy"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:text="@string/data_policy"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view2"
        app:layout_constraintTop_toBottomOf="@id/datapolicy"
        android:layout_marginTop="20sp"
        android:background="@android:color/darker_gray"/>



</androidx.constraintlayout.widget.ConstraintLayout>