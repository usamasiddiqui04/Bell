<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RestaurantsDetailsActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/pizza"
        android:id="@+id/imageview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ImageView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="596dp"
        android:fitsSystemWindows="true"
        android:background="@drawable/fadness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:id="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:src="@drawable/ic_baseline_keyboard_backpink"
        android:background="@drawable/circulerimgaeback"/>



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:id="@+id/details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:src="@drawable/ic_outline_error_outline_24"
        android:background="@drawable/circulerimgaeback"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:id="@+id/resname"
        android:text="@string/chappel_kabab_kadhi_bar_b_q"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/resname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Delivery 20 min"
        android:textStyle="bold"
        android:textSize="14sp"
        android:id="@+id/deliverytime"
        android:textColor="@color/white"
        android:background="@drawable/backgroundtext"
        android:padding="7dp"
        android:layout_marginTop="25dp"/>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/deliverytime"
        app:layout_constraintStart_toStartOf="@id/deliverytime"
        app:layout_constraintEnd_toEndOf="@id/deliverytime">

        <ImageView
            android:layout_width="15dp"
            app:layout_constraintTop_toBottomOf="@id/deliverytime"
            app:layout_constraintStart_toStartOf="@id/deliverytime"
            app:layout_constraintEnd_toEndOf="@id/deliverytime"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_marginTop="20dp"
            android:id="@+id/star"
            android:layout_height="15dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.9"
            android:textSize="16sp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(31)"
            android:textSize="16sp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>